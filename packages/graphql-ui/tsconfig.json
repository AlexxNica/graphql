{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "rootDir": "src",
        "baseUrl": ".",
        "outDir": "dist",
        "noEmit": false,
        "paths": {
            "@neo4j/graphql": ["../graphql/src"],
            "@neo4j/graphql-plugin-auth": ["../graphql-plugin-auth/src"]
        }
    },
    "include": ["src/**/*"],
    "references": [
        { "path": "../graphql/src/tsconfig.production.json" },
        { "path": "../graphql-plugin-auth/tsconfig.production.json" }
    ]
}
